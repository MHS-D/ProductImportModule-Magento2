<?xml version="1.0"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:framework:View/UiComponent/etc/ui_configuration.xsd">
    <dataSource name="product_import_data_source">
        <argument name="dataProvider" xsi:type="string">Vendor\ProductImport\Model\Grid\DataProvider</argument>
    </dataSource>

    <columns name="product_import_columns">
        <column name="id">
            <settings>
                <label>ID</label>
                <sortable>true</sortable>
            </settings>
        </column>
        <column name="file_name">
            <settings>
                <label>File Name</label>
            </settings>
        </column>
        <column name="upload_date">
            <settings>
                <label>Upload Date</label>
            </settings>
        </column>
        <!-- Add more columns as necessary -->
    </columns>
</listing>
